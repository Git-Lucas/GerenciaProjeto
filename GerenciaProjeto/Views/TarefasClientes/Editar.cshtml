@using GerenciaProjeto.Models.Enums
@model GerenciaProjeto.Models.TarefaCliente

@{
    ViewData["Title"] = "Editar";
}

<h1>@ViewData["Title"]</h1>

<h4>Tarefa Cliente</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Editar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="row" style="margin-bottom: 15px">
                <div class="col">
                    <label asp-for="Funcionario" class="control-label"></label>
                    <input asp-for="Funcionario" class="form-control" />
                    <span asp-validation-for="Funcionario" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="EmpresaId" class="control-label"></label>
                    <select asp-for="EmpresaId" class="form-control" asp-items="ViewBag.EmpresaId"><option disabled>Selecione</option></select>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Erro" class="control-label"></label>
                <textarea rows="5" asp-for="Erro" class="form-control"></textarea>
                <span asp-validation-for="Erro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Motivo" class="control-label"></label>
                <textarea rows="5" asp-for="Motivo" class="form-control"></textarea>
                <span asp-validation-for="Motivo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Solucao" class="control-label"></label>
                <textarea rows="5" asp-for="Solucao" class="form-control"></textarea>
                <span asp-validation-for="Solucao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" asp-items="Html.GetEnumSelectList<Status>()" class="form-control"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="DataInicial"/>
            <input type="hidden" asp-for="DataFinal"/>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary btn-sm" />
                <a class="btn btn-outline-secondary btn-sm" asp-action="Inicio">Voltar à Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
