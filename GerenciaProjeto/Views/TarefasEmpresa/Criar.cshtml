@using GerenciaProjeto.Models.Enums
@model GerenciaProjeto.Models.TarefaEmpresa

@{
    ViewData["Title"] = "Criar";
}

<h1>@ViewData["Title"]</h1>

<h4>Tarefa Empresa</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Criar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Acao" class="control-label"></label>
                <textarea rows="5" asp-for="Acao" class="form-control"></textarea>
                <span asp-validation-for="Acao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Observacao" class="control-label"></label>
                <textarea rows="5" asp-for="Observacao" class="form-control"></textarea>
                <span asp-validation-for="Observacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" asp-items="Html.GetEnumSelectList<Status>()" class="form-control"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="DataInicial" />
            <input type="hidden" asp-for="DataFinal" />
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary btn-sm" />
                <a class="btn btn-outline-secondary btn-sm" asp-action="Inicio">Voltar à Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
