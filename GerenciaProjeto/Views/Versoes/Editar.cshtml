@model GerenciaProjeto.Models.Versao

@{
    ViewData["Title"] = "Editar";
}

<h1>@ViewData["Title"]</h1>

<h4>Versão</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Editar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <div class="form-group col-lg-6">
                    <label asp-for="Numero" class="control-label"></label>
                    <input asp-for="Numero" class="form-control" />
                    <span asp-validation-for="Numero" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="Data" class="control-label"></label>
                    <input asp-for="Data" class="form-control" />
                    <span asp-validation-for="Data" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="SistemaId" class="control-label"></label>
                <select style="background: #eee; pointer-events: none; touch-action: none" readonly="readonly" tabindex="-1" aria-disabled="true" asp-for="SistemaId" class="form-control" asp-items="ViewBag.SistemaId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Nota" class="control-label"></label>
                <textarea rows="8" asp-for="Nota" class="form-control"></textarea>
                <span asp-validation-for="Nota" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary btn-sm" />
                <a class="btn btn-outline-secondary btn-sm" asp-action="Inicio" asp-route-sistemaId="@ViewData["idSistema"]">Voltar à Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
